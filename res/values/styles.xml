<resources>

    <style name="titleText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/title_text_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:textColor">@color/title</item>
    </style>
    <!--<style name="checkbox">
        <item name="android:widgetLayout">@layout/preference_widget_checkbox</item>
    </style>
    -->
    <style name="editTextStyle">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:textColor">@color/edit_text_normal</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="btn_grey">
        <item name="android:background">@drawable/btn_grey_selector</item>
        <item name="android:shadowColor">@color/btn_grey_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="roster_item_name">
        <item name="android:textColor">@color/roster_item_name</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="roster_item_subtext">
        <item name="android:textColor">@color/roster_item_subtext</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="MoreTabItem" parent="style/roster_item_name">
        <item name="android:background">@drawable/list_item_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:selectable">true</item>
        <!--<item name="android:drawableRight">@drawable/arrow</item>-->
    </style>
    <style name="AccountItem" parent="style/roster_item_name">
        <item name="android:focusable">true</item>
        <item name="android:padding">10dip</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:selectable">true</item>
    </style>
    <style name="radioButton" parent="style/roster_item_name">
        <item name="android:background">@drawable/list_item_account_status_selector</item>
        <item name="android:button">@drawable/btn_radio</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="accountTabIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">14dp</item>
    </style>
    <style name="profilePageHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#ABABAB</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="profilePageValue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="sendingMessageProgressbar">
        <item name="android:indeterminateDrawable">@drawable/progress_sending_message</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:maxWidth">10dp</item>
    </style>
    <style name="ics_account_list_item">

        <item name="android:textColor">@color/ics_account_item_account_name</item>
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">true</item>

    </style>
    <style name="ics_account_list_item_subtext">
        <item name="android:textColor">@color/ics_account_item_status</item>
        <item name="android:textSize">14dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="accountProfile_attribute">
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/ics_blue</item>>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="accountProfile_attributeValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ics_edittext" parent="@android:style/Widget.EditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ics_edit_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="whiteBackground">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="btn_black">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:background">@drawable/ics_button</item>
        <item name="android:textColor">@color/black_button_text</item>
        <item name="android:textSize">15sp</item>

    </style>
    <style name="presenceChangeOptions">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/presence_change_options_foreground</item>
        <item name="android:textSize">14sp</item>

    </style>
    <style name="ics_spinner">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="highlightedText">
        <item name="android:textColor">@color/default_background_white</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">@color/presence_change_options_foreground</item>
    </style>

    <style name="whiteTitleBackground" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/default_background_white</item>
        <item name="android:textColor">@color/ics_blue</item>
    </style>

    <style name="blueBackgroundOnClick">
        <item name="android:background">@drawable/blue_background_on_click</item>
    </style>

    <style name="ics_blue_heading">
        <item name="android:textColor">@color/ics_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="contact_list">
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:scrollingCache">true</item>
        <item name="android:smoothScrollbar">false</item>
        <item name="android:background">@color/roster_item_background</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>
    <style name="empty_state_message_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#959595</item>
    </style>
    <style name="empty_state_message">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#959595</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="contact_profile_name">

        <item name="android:textColor">@color/roster_item_name</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#ededed</item>
    </style>
    <style name="list_item">
        <item name="android:textColor">@color/list_item</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="list_item_subtext">
        <item name="android:textColor">@color/list_item_subtext_normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
